<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o nome do usário" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissão:</label>
        <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newslatter}}
            <input type="checkbox" name="newslatter" checked>
        {{else }}
            <input type="checkbox" name="newslatter">
        {{/if}}
        <label for="newslatter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>